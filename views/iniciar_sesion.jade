extends layout 

block content 

    doctype html
    html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Casita de Aseo Bravid
        link(rel="stylesheet", href="style.css")

    body
        center
            header#container
                form(action="/iniciar_sesion/", method="post")
                    img(src="images/logo.jpg", width="120")
                    h2.aseo Casita de Aseo Bravid
                    h1#iniciars Iniciar Sesión
                    .let Email
                    input.email(type="email", name="email", required)
                    .let Contraseña
                    input.password(type="password", name="password", required)
                    br
                    button#inici Iniciar Sesión
                    .opti
                        #sb(style="margin-right: 90px;") No Tienes Cuenta?
                        a#registrarse(href="/registrarse") Registrarse


