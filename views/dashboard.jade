extends layout 

block content 

    doctype html
    html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Casita de Aseo Bravid
        link(rel="stylesheet", href="style.css")

    body
        header
            .contenedor 
                .logo
                    img(src="/images/logo.jpg", width="100")

                .casita
                    h1 Casita de Aseo Bravid
                    
                form.login-form(action="/busqueda/", method="post", style="margin-top: 20px;")
                    input.search(type="text", name="search", placeholder="Buscar...", required)
                    .lupa
                        button.tt(type="submit")
                            img(src="/images/lupa.png", width="50")

                .carrito
                    center
                        img(src="/images/carrito.png", width="50")

                .us
                    .hola
                        center
                            h2 Hola Admin!

                    .perfil
                        center
                            botton 
                                img(src="/images/perfil.png", width="50")
        
            center
                img(src="/images/perfil.png", width="50")   
                h3 Vista Usuario 
                h1
                a(href="/") Cerrar Sesion

            center

                    .contenedor1
                        h2 Lista de Productos:
                        #tresd

                            br
                            - for (let i = 0; i < results.length; i++) {
                                br
                                img#produ(src="/images/logo.jpg", width="200")
                                div
                                    h1.venu #{results[i].nombre}
                                div
                                    h1#ven #{results[i].cantidad}
                                div
                                    h1#ven $#{results[i].precio}

                                .product-quantity
                                    div#buttones 
                                        a(href="/editprod/#{results[i].id_producto}") Editar
                            - }
                            br
                        a#increase(href="/insert") +

                    