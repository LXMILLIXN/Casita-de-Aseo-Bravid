extends layout 

block content 

    doctype html
    html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Casita de Aseo Bravid
        link(rel="stylesheet", href="style.css")

    body
        header
            .contenedor 
                .logo
                    a(href="/iniciar_sesion/begin")
                        img(src="/images/logo.jpg", width="100")

                .casita
                    h1 Casita de Aseo Bravid
                    
                form.login-form(action="search.php", method="get", style="margin-top: 20px;")
                    input.search(type="search", name="search", placeholder="Buscar...", required)
                    .lupa
                        button.tt(type="submit")
                            img(src="/images/lupa.png", width="50")


                .carrito
                    center
                        a(href="/carrito")
                            img(src="/images/carrito.png", width="50")
                .us
                    .hola
                        center
                            h2 Hola CARLOS!
                    .perfil
                        center
                            botton
                                img(src="/images/perfil.png", width="50")
        
            center
                img(src="/images/perfil.png", width="50")  
                h1
                a(href="/usuario") Perfil 
                h1 
                a(href="/") Cerrar Sesion 

        center
            .trece
                .jabo
                    img(src="/images/dove.png", width="200")
                    div
                        h1.venu Jabon dove blanco tripack
                    div.ocho
                        h1.dic $18200
                a(href="/carrito")
                    img(src="/images/trash.jpg", width="50")

            #tot
                h1    
                    #total(style="margin-right: 90px;") Total $ 25700
                button#comprar Comprar Ahora


