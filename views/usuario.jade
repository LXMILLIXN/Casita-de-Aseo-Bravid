extends layout 

block content 

    doctype html
    html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Casita de Aseo Bravid
        link(rel="stylesheet", href="style.css")

    body
        header
            .contenedor 
                .logo
                    a(href="/iniciar_sesion/begin")
                        img(src="/images/logo.jpg", width="100")

                .casita
                    h1 Casita de Aseo Bravid
                    
                form.login-form(action="search.php", method="get", style="margin-top: 20px;")
                    input.search(type="search", name="search", placeholder="Buscar...", required)
                    .lupa
                        button.tt(type="submit")
                            img(src="/images/lupa.png", width="50")

                .carrito
                    center
                        a(href="/carrito")
                            img(src="/images/carrito.png", width="50")
                .sus
                    .hola
                        center
                            h2 Hola CARLOS!
                    .perfil
                        center
                            botton
                                img(src="/images/perfil.png", width="50")

            center
                img(src="/images/perfil.png", width="50")   
                div 
                a(href="/usuario")  Perfil 
                div 
                a(href="/") Cerrar Sesion

            center
                #dat
                    img(src="images/perfil.png", width="120")
                    h2.aseo Datos de tu cuenta
                    .let Nombres y Apellidos
                    input#nombre(type="nombre", name="nombre", required, readonly)
                    .let Número de celular
                    input#number(type="number", name="number", required)
                    .let Email
                    input.email(type="email", name="email", required, readonly)
                    .let Nueva contraseña
                    input.password(type="password", name="password", required)
                    .let Confirmar Contraseña
                    input.password(type="password", name="password", required)
                    br
                    button#reg Guardar cambios
